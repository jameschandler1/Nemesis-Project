

<%- include('partials/header.ejs') %>

<section id="details">
    <div>
        <h1><%= event.location.name %></h1>
        <div><%= event.location.post %></div>
        <br>
        <div><%= event.title %></div>
        <br>
        <div><%= event.description %></div>
    </div>
</section>

<br>

<% comment.forEach(c => { %>
<div class="comment"> <%= c.user %> : <%= c.comment %> </div>
<form action="/user/event-details/<%= event._id %>" method="POST">
    <input type="text" name="comment">
    <button type="submit">edit</button>
</form>
<form action="/user/event-details/<%= event._id %>?_method=DELETE" method="POST">
    <button type="submit">x</button>
</form>
<% }) %>

<br>



<form id="comment-form" action="/user/event-details/<%= event._id %>?_method=PATCH" method="POST">
    <textarea id="comment-area" type="text" name="comment"></textarea>
    <input type="submit" value='comment'>
</form>

<%- include('partials/footer.ejs') %>
